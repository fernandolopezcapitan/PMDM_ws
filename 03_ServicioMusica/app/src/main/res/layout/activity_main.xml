        android:onClick="seleccionarCancion" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam Smith - ..."
        android:id="@+id/seleccionSamSmith"
        android:layout_below="@+id/radioButton"
