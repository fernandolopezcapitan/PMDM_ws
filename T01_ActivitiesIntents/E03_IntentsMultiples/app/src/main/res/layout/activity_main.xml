<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnLlamar"
        android:id="@+id/buttonLlamar"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonMapa"
        android:layout_alignEnd="@+id/buttonMapa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnMapa"
        android:id="@+id/buttonMapa"
        android:layout_below="@+id/buttonLlamar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnEmail"
        android:id="@+id/buttonEmail"
        android:layout_below="@+id/buttonMapa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextNum"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/editTextNumero"
        android:layout_toLeftOf="@+id/buttonLlamar"
        android:layout_toStartOf="@+id/buttonLlamar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMapa"
        android:layout_alignTop="@+id/buttonMapa"
        android:layout_toLeftOf="@+id/buttonMapa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/editTextMapa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destinatario"
        android:id="@+id/textViewDestinatario"
        android:layout_below="@+id/buttonEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDestinatario"
        android:layout_below="@+id/textViewDestinatario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mensaje"
        android:id="@+id/textViewMensaje"
        android:layout_below="@+id/editTextDestinatario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMensaje"
        android:layout_below="@+id/textViewMensaje"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Asunto"
        android:id="@+id/textViewAsunto"
        android:layout_below="@+id/editTextMensaje"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAsunto"
        android:layout_below="@+id/textViewAsunto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
